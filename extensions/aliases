alias up="source ~/.bash_profile"
alias flip="tr '\r' '\n'"
alias ll="ls -alG"
alias pp="ping 4.2.2.2"

# This only works on Mac OS X
if [ "$(uname)" = "Darwin" ]; then
   alias router="(ipconfig getpacket en0; ipconfig getpacket en1) | grep router | egrep -o '[0-9\.]+'"
fi

if [ -f `which python` ]; then
   alias jsonpp='python -m json.tool'
fi

if [ -f `which curl` ]; then
   alias wimi="(curl -s http://api.externalip.net/ip/; echo)"
fi

alias ff="find . -type f"
alias utc="TZ=UTC date +'%Y-%m-%dT%H:%M:%S%z'"